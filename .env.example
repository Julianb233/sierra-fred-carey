# ======================
# SUPABASE (Required)
# ======================
# Get these from https://supabase.com/dashboard → Project Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# ======================
# JWT AUTHENTICATION (Required)
# ======================
# Generate a strong random secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ======================
# STRIPE (Required for payments)
# ======================
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Get from https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# Price IDs -- create in Stripe Dashboard → Products → Add pricing
NEXT_PUBLIC_STRIPE_FUNDRAISING_PRICE_ID=price_...
NEXT_PUBLIC_STRIPE_VENTURE_STUDIO_PRICE_ID=price_...

# ======================
# AI PROVIDERS (at least one required)
# ======================
# The system tries providers in order: OpenAI → Anthropic → Google

# OpenAI -- https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Anthropic (fallback) -- https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini (fallback) -- https://aistudio.google.com/apikey
GOOGLE_API_KEY=...

# ======================
# APP CONFIGURATION
# ======================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ======================
# ADMIN PANEL
# ======================
# Generate with: openssl rand -base64 32
ADMIN_SECRET_KEY=your-admin-secret-key-change-in-production

# ======================
# CRON JOBS
# ======================
# Set in Vercel Dashboard → Settings → Environment Variables
CRON_SECRET=your-cron-secret

# ======================
# LIVEKIT (Optional - voice features)
# ======================
# Get from https://cloud.livekit.io → Project Settings
LIVEKIT_URL=wss://your-project.livekit.cloud
NEXT_PUBLIC_LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_HOST=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=API...
LIVEKIT_API_SECRET=...

# ======================
# TWILIO (Optional - SMS check-ins)
# ======================
# Get from https://console.twilio.com
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_MESSAGING_SERVICE_SID=MG...

# ======================
# RESEND (Optional - email notifications)
# ======================
# Get from https://resend.com → Settings → API Keys
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=alerts@yourdomain.com
RESEND_FROM_NAME=Sahara

# ======================
# AUTO-PROMOTION (Optional - A/B testing)
# ======================
AUTO_PROMOTION_ENABLED=true
AUTO_PROMOTION_REQUIRE_MANUAL=false
AUTO_PROMOTION_CRON_SECRET=your-auto-promotion-cron-secret
