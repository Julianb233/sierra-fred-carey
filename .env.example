# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# Auto-Promotion System
# Enable automatic promotion of A/B test winners
AUTO_PROMOTION_ENABLED=false

# Dry-run mode - log actions without executing
AUTO_PROMOTION_DRY_RUN=true

# Statistical thresholds
AUTO_PROMOTION_MIN_CONFIDENCE=95.0
AUTO_PROMOTION_MIN_SAMPLE_SIZE=1000
AUTO_PROMOTION_MIN_IMPROVEMENT=5.0
AUTO_PROMOTION_MIN_RUNTIME_HOURS=24

# Excluded experiments (comma-separated)
# These experiments will never be auto-promoted
AUTO_PROMOTION_EXCLUDED=critical-experiment,legacy-test

# Auto-notify alerts
# Enable automatic notifications when alerts are generated
AUTO_NOTIFY_ALERTS=true
